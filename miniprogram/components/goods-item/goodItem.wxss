/* components/goods-item/goodItem.wxss */
.goods-item {
  display: flex;
  width: 100%;
  padding: 10rpx;
  background-color: #fff;
}

.info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  padding:10rpx 20rpx 1rpx 4rpx;
}

.pic {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  overflow: hidden;
  border-radius: 10rpx;
  display: flex;
  align-items: end;
}


.name {
  margin-bottom: 4rpx;
  font-weight: bold;
  font-size: 12px;

}

.describe {
  color: #aaa;
  font-size: 12px;
}

.price {
  display: flex;
  align-items: end;
  justify-content: space-between;
}

.price-text {
  font-size: 16px;
  font-weight: bold;
  color: #e60011;
}

.stepper {
  display: flex;
  align-items: center;
}

.count-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
  width: 1rem;
  height: 1rem;
  border: 1px #e60011 solid;
}

.add-btn {
  color: #ffffff;
  background-color: #e60011;
}

.num{
  font-size: 12px;
  padding: 10rpx;
}

.cut-btn{
  color: #e60011;
}