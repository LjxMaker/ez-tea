/* pages/order/order.wxss */
.storelist-container{
  box-sizing: border-box;
  padding-top:120rpx;
  width:100vw;
  height:100vh;
  background:#fff;
}
.storelist-main{
  box-sizing: border-box;
  display: flex;
  width:100vw;
 justify-content: space-around;
}
.van-tabs{
  width:100vw;
}
.storelist-progress,.storelist-history,.storelist-chargeback{
  width:100vw;
  height:996rpx;
}
.storelist-progress-content,.storelist-history-content,.storelist-chargeback-content,.storelist-chargeback-content{
  display:flex;
  align-items: center;
  justify-content: center;
  width:100vw;
  height:996rpx;
  background:rgba(238, 238, 238, 0.3);
}
.storelist-empty{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.storelist-img{
  width:330rpx;
  height:330rpx;
  background-image: url(https://636c-cloud1-2g9ol1w699eb1c84-1314595113.tcb.qcloud.la/index-images/img_empty_order.png?sign=398175a0173b2f253a1c7e79d4eca272&t=1667655912);
  background-size:contain;
  background-repeat: no-repeat;
  background-position: center center;
}
.storelist-empty>.storelist-text{
  font-size:22rpx;
  color:#888;
}
.storelist-empty>.storelist-button{
  margin-top:40rpx;
  padding:20rpx 40rpx;
  background:red;
  color:#fff;
  font-size:30rpx;
  border-radius: 10rpx;
}