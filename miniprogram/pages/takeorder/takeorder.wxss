/* pages/takeorder/takeorder.wxss */
.take-order-page {
  width: 750 rpx;
  height: 100vh;
  overflow: hidden;
  position: relative;
  
}

.back-btn{
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.custom{
  width: 100%;
  height: 100rpx;
  /* background: #c00; */
  z-index: 999;
  background: #fff;
  display: flex;
  align-items: center;
}
.nav_logo{
  float: left;
  display: block;
  width:61rpx;
  height:47rpx;
}
.navInput{
  width: 410rpx;
  height: 58rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 20rpx;
  background: #eeeeee;
  border-radius: 40rpx;
  position: relative;
  
}

.navInput input{
  width: 100%;
  background: #eeeeee;
  font-size: 22rpx;
}
.custom text{
  display: inline-block;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  max-width: 280rpx;
}
.empty_custom{
  width: 100%;
}

.food-safety-info {
  line-height: 2;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: #fff;
  font-size: 12px;
}

.main {
  position: absolute;
  display: flex;
  width: 750rpx;
  height: calc(100vh - 150px);

}

.goods-type-title {
  padding: 10rpx;
}

.side-bar {
  width: auto;
}

.content {
  flex-grow: 1;
  height: auto;
  background-color: #fff;
}

.item-title{
  padding: 8rpx;
}

.cont-pro {
  height: 100%;
  display: flex;
  background-color: #fff;
}

.pro-left {
  width: 160rpx;
  flex-basis: 160rpx;
  background-color: #f6f6f6;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
}

.pro-title {
  position: relative;
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pro-right {
  flex: 1;
  background-color: #fff;
  overflow-y: scroll;
}


.pro-tag text {
  padding: 4rpx 10rpx;
  background-color: rgba(240, 141, 49, 0.15);
  margin-right: 10rpx;
  border-radius: 2rpx;
}

.pro-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tabs-active{
  background-color: #fff;
}

.tabs-active::after{
  content: '';
  width: 5rpx;
  height: 80rpx;
  background-color: red;
  position: absolute;
  left: 0;
  top: 10rpx;
}

.shop-bag{
  width: 90rpx;
  height: 90rpx;
}